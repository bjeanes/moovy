<h1>New movie</h1>

<% form_for(@movie) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :disk_label %><br />
    <%= f.text_field :disk_label %>
  </p>
  <p>
    <%= f.label :imdb_link %><br />
    <%= f.text_field :imdb_link %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', movies_path %>
